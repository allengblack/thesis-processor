@model ThesisProcessor.Models.ThesesViewModels.ThesisCreateViewModel

@{
    ViewData["Title"] = "Submit";
}

<h2>Submit</h2>

<div class="container">
    <form asp-controller="Theses" asp-action="Submit" method="post" enctype="multipart/form-data">
        <div class="form-group">
            <label asp-for="@Model.Title" class="control-label"></label>
            <input asp-for="@Model.Title" class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="@Model.Author" class="control-label"></label>
            <input asp-for="@Model.Author" class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="@Model.Supervisor" class="control-label"></label>
            <input asp-for="@Model.Supervisor" class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="@Model.Abstract" class="control-label"></label>
            <textarea asp-for="@Model.Abstract" class="form-control"></textarea>
        </div>

        <div class="form-group">
            <label asp-for="@Model.References" class="control-label"></label>
            <textarea asp-for="@Model.References" class="form-control" placeholder="Enter references seperated by a comma"></textarea>
        </div>

        <div class="form-group">
            <label asp-for="@Model.Month" class="control-label"></label>
            <select asp-for="@Model.Month" asp-items="Html.GetEnumSelectList<Month>()" class="form-control"></select>
        </div>

        <div class="form-group">
            <label asp-for="@Model.Year" class="control-label">Year of Submission</label>
            <input type="number" min="2000" default="2000" minlength="4" maxlength="4" asp-for="@Model.Year" class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="@Model.Thesis" class="control-label">Upload a document</label>
            <input asp-for="@Model.Thesis" class="form-control" />
        </div>

        <button type="submit">Upload File</button>
    </form>
</div>