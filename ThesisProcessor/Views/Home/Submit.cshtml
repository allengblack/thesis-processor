@model ThesisProcessor.Models.HomeViewModels.ThesisSaveViewModel

@{
    ViewData["Title"] = "Submit";
}

<h2>Submit</h2>

<div class="container">
    <form asp-controller="Home" asp-action="Submit" method="post" enctype="multipart/form-data">
        <div class="form-group">
            <label asp-for="@Model.Title"></label>
            <input asp-for="@Model.Title" />
        </div>

        <div class="form-group">
            <label asp-for="@Model.Author"></label>
            <input asp-for="@Model.Author" />
        </div>

        <div class="form-group">
            <label asp-for="@Model.Supervisor"></label>
            <input asp-for="@Model.Supervisor" />
        </div>

        <div class="form-group">
            <label asp-for="@Model.Abstract"></label>
            <textarea asp-for="@Model.Abstract"></textarea>
        </div>

        <div class="form-group">
            <label asp-for="@Model.References"></label>
            <textarea asp-for="@Model.References"></textarea>
        </div>

        <div class="form-group">
            <label asp-for="@Model.DateOfThesis"></label>
            <input type="date" asp-for="@Model.DateOfThesis" />
        </div>

        <div class="form-group">
            <label asp-for="@Model.Thesis">Upload a document</label>
            <input asp-for="@Model.Thesis" />
        </div>

        <button type="submit">Upload File</button>
    </form>
</div>